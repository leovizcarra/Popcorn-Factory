<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".SeatSelection">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movies"
            android:textColor="@color/yellow"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/yellow"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="32dp"
            />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/row1"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginTopRadioGroup"
        android:paddingHorizontal="@dimen/horizontalPaddingRadioGroup">

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="1"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="2"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="3"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="4"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="5"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/row2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginTopRadioGroup"
        android:paddingHorizontal="@dimen/horizontalPaddingRadioGroup">

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="6"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="7"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="8"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="9"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="10"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/row3"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginTopRadioGroup"
        android:paddingHorizontal="@dimen/horizontalPaddingRadioGroup">

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="11"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="12"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="13"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="14"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="15"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/row4"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginTopRadioGroup"
        android:paddingHorizontal="@dimen/horizontalPaddingRadioGroup">

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="16"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="17"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="18"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="19"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="20"
            android:layout_marginHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

    </RadioGroup>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@color/grisClaro"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="50dp"
        android:text="SCREEN"
        android:textSize="23sp"
        android:textStyle="italic"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:paddingHorizontal="@dimen/horizontalPaddingRadioGroup"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/symbols"
                android:layout_height="@dimen/symbols"
                android:layout_gravity="center_vertical"
                android:src="@drawable/radio_normal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"/>

            <ImageView
                android:layout_width="@dimen/symbols"
                android:layout_height="@dimen/symbols"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/radio_disable"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not \nAvailable"
                android:layout_gravity="center_vertical"
                android:textSize="19sp"
                android:textColor="@color/grisClaro"
                android:layout_marginLeft="5dp"/>

            <ImageView
                android:layout_width="@dimen/symbols"
                android:layout_height="@dimen/symbols"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/radio_selected"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your \nselection"
                android:layout_gravity="center_vertical"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Confirm"/>

</LinearLayout>